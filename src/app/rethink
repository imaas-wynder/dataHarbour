import { pool, getClient } from "../services/db/dbconnect" // Adjust the path as needed
import { QueryResult } from 'pg';

// Define an interface for the data you expect from the database
interface Item {
  id: number;
  name: string;
  description?: string;
  // Add other properties as needed
}

const getAllItems = async (): Promise<Item[]> => {
  let client;
  try {
    client = await getClient();
    const result: QueryResult<Item> = await client.query(`
      SELECT id, name, description
      FROM items; -- Replace 'items' with your actual table name
    `);
    return result.rows;
  } catch (error) {
    console.error('Error fetching all items:', error);
    throw error;
  } finally {
    if (client) {
      client.release(); // Release the client back to the pool
    }
  }
};

// You can add more functions here for specific data fetching needs
// e.g., getItemById(id: number): Promise<Item | null>

export { getAllItems, Item };